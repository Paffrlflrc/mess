{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./out/typescript/",
    "paths": {
      "@app/*": ["./app/*"],
      "@modules/*": ["./node_modules"],
      "@pages/*": ["./app/pages/*"],
      "@themes/*": ["./app/themes/*"]
    },
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "ESNext"
  },
  "include": ["app/", "types"]
}
